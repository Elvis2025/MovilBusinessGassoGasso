<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovilBusiness.Views.Components.TemplateSelector.Reportes.InventarioRow"
      HorizontalOptions="FillAndExpand"
      Padding="10,5">
    
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>
    <BoxView Grid.Column="0" Grid.RowSpan="2"/>
    <BoxView Grid.Column="1" Grid.RowSpan="2"/>
    <Label Grid.Column="0" HorizontalOptions="FillAndExpand" Text="{Binding ProDescripcion}" FontAttributes="Bold"/>
    <Label HorizontalOptions="End" Grid.Column="1" Text="{Binding InvCantidadLabel}" FontAttributes="Bold"/>
        
</Grid>